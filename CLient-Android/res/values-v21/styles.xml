<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Heli.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>
	<style name="Heli.Theme.Home" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="@android:colorPrimaryDark">#EF6C00</item>
        <item name="android:colorPrimary">@color/Orange</item>    
     	<item name="android:statusBarColor">#B2EF6C00</item>
     	<item name="@android:windowTranslucentStatus">false</item>
     	<item name="android:windowTranslucentNavigation">true</item>   
    </style>
    
    <style name="Heli.Theme.StartFirstActivity" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>        
        <item name="android:colorPrimary">@color/first_activity_colorPrimary</item>
        <item name="android:colorPrimaryDark">#D81B60</item>
        <item name="android:colorAccent">#E65100</item>
    </style>

    <style name="PinkButton" parent="@android:style/Widget.Material.Button">     
        
    </style>
    <style name="PinkButtonTheme" parent="@style/Heli.Theme.Light">
        <item name="android:colorButtonNormal">@color/DeepPink</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
    </style>

    <style name="Heli.Button" parent="@android:style/Widget.Material.Button"></style>

    <style name="Heli.Button.Primary" parent="@android:style/Widget.Material.Button">
        <item name="android:colorButtonNormal">@attr/colorButtonNormal</item>
    </style>

    <style name="Heli.Button.Small" parent="@android:style/Widget.Material.Button.Small"></style>

    <style name="Heli.Button.Borderless.Small" parent="@android:style/Widget.Material.Button.Borderless.Small"></style>

</resources>