<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Heli.Style.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="Heli.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="Heli.Theme.Home" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryDark">#E65100</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
       
    </style>

    <style name="ActionMode" parent="@style/Theme.AppCompat">       
        <item name="android:height">56dp</item>
        <item name="android:background">#BBDEFB</item>        
		<item name="android:titleTextStyle">@style/ActionModeText</item>        
    </style>
    <style name="ActionModeText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>        
    </style>

    <style name="Heli.Theme.StartFirstActivity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_material_light</item>
        <item name="colorPrimaryDark">@color/Pink</item>
        <item name="colorAccent">@color/Blue</item>
        <item name="@android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="Heli.Theme.AppSetting" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_setting_primary</item>
        <item name="colorPrimaryDark">@color/app_setting_primaty_darnk</item>
        <item name="colorAccent">#26A69A</item>
    </style>

    <style name="PinkButton">
        <item name="android:background">@drawable/read_button</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
    </style>

    <style name="PinkButtonTheme" parent="@style/Heli.Theme.Light"></style>

    <style name="Heli.Button" parent="@android:style/Widget.Holo.Button"></style>

    <style name="Heli.Button.Primary" parent="@style/Heli.Button"></style>

    <style name="Heli.Button.Small" parent="@android:style/Widget.Holo.Button.Small"></style>

    <style name="Heli.Button.Borderless.Small" parent="@android:style/Widget.Button.Small"></style>

    <style name="Viepagertitlestrip">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListDefaultStyle">
        <item name="@android:background">@drawable/list_backdground</item>
        <item name="@android:clickable">true</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MaterialDesignStyle" parent="MD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>