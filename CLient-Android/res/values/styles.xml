<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Heli.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="Heli.Theme.Home" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorPrimary">@color/Orange</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Heli.Theme.StartFirstActivity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_material_light</item>
        <item name="colorPrimaryDark">@color/Pink</item>
        <item name="colorAccent">@color/Blue</item>
        <item name="@android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>        
    </style>

     <style name="PinkButton">
        <item name="android:background">@drawable/read_button</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
    </style>
    <style name="PinkButtonTheme" parent="@style/Heli.Theme.Light">
    </style>

    <style name="Heli.Button" parent="@android:style/Widget.Holo.Button"></style>

    <style name="Heli.Button.Primary" parent="@style/Heli.Button"></style>

    <style name="Heli.Button.Small" parent="@android:style/Widget.Holo.Button.Small">       
    </style>

    <style name="Heli.Button.Borderless.Small" parent="@android:style/Widget.Button.Small"></style>

    <style name="Viepagertitlestrip">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ListDefaultStyle">
        <item name="@android:background">@drawable/list_backdground</item>
        <item name="@android:clickable">true</item>
    </style>
	
</resources>