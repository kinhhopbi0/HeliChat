<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="Heli.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>
	<style name="Heli.Theme.StartFirstActivity" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>
    </style>
    
	<style name="Heli.Theme.PinkButton" parent="@style/Heli.Theme.Light">
        <item name="android:background">@color/DeepPink</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
    </style>
    
    <style name="Heli.Button" parent="@android:style/Widget.Holo.Button"></style>

    <style name="Heli.Button.Primary" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@attr/colorButtonNormal</item>
    </style>

    <style name="Heli.Button.Small" parent="@android:style/Widget.Holo.Button.Small"></style>

    <style name="Heli.Button.Borderless.Small" parent="@android:style/Widget.Holo.Button.Borderless.Small"></style>
    
</resources>
