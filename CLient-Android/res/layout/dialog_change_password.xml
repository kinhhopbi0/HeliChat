<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:app="http://schemas.android.com/apk/res/com.pdv.heli"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
    android:theme="@style/Theme.AppCompat.Light.Dialog" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

       <!--  <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/cotainer_drow_shadow"
            android:gravity="center"
            android:text="Change you signin password"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="18dp" /> -->

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_curent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:hint="Current password"
            android:inputType="textPassword"
            app:floatingLabel="highlight"
            app:floatingLabelTextSize="16sp"
            app:minCharacters="6" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="New password"
            android:inputType="textPassword"
            app:floatingLabel="highlight"
            app:floatingLabelTextSize="16sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="retype new password"
            android:inputType="textPassword"
            app:floatingLabel="highlight"
            app:floatingLabelTextSize="16sp" />
    </LinearLayout>

</ScrollView>