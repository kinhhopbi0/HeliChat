<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_friend_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/im_friend_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_account_circle" />

    <RelativeLayout
        android:id="@+id/chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_toRightOf="@id/im_friend_avatar"
        android:background="@drawable/bubble1"
        android:minHeight="48dp"
        android:minWidth="150dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp" >

        <TextView
            android:id="@+id/textViewContent"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="16sp" />
        
    </RelativeLayout>
    <TextView
            android:id="@+id/sendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:layout_below="@id/chat_bubble"
            android:text="10:11 AM"
            android:textColor="@color/abc_secondary_text_material_light"
            android:layout_alignLeft="@id/chat_bubble"
            android:layout_marginLeft="16dp"
            android:visibility="gone"
            android:textSize="14sp" />

</RelativeLayout>